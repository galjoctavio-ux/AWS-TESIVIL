rules_version = '2';

// Reglas de Firebase Storage para QRclima
// Controlan el acceso a archivos subidos (fotos de perfil, evidencias, etc.)

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // FOTOS DE PERFIL
    // ============================================
    // Cualquiera puede ver, solo usuarios autenticados pueden subir
    match /profile_photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // EVIDENCIAS DE SERVICIOS
    // ============================================
    // Usuarios autenticados pueden subir evidencias
    match /service_evidence/{fileName} {
      allow read: if true; // Permitir lectura pública para que aparezcan en PDFs y para el cliente
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // REGLA POR DEFECTO
    // ============================================
    // Denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
