rules_version = '2';

// Reglas de Firebase Storage para QRclima
// Controlan el acceso a archivos subidos (fotos de perfil, evidencias, etc.)

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // FOTOS DE PERFIL
    // ============================================
    // Cualquiera puede ver, solo usuarios autenticados pueden subir
    match /profile_photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // EVIDENCIAS DE SERVICIOS
    // ============================================
    // Usuarios autenticados pueden subir evidencias
    match /service_evidence/{fileName} {
      allow read: if true; // Permitir lectura pública para que aparezcan en PDFs y para el cliente
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024 // Max 10MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // BRANDING / LOGOS PRO
    // ============================================
    // Usuarios PRO pueden subir su logo (solo a su propia carpeta)
    match /branding/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 2 * 1024 * 1024  // Max 2MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // FOTOS SOS - COMUNIDAD
    // ============================================
    // Usuarios autenticados pueden subir fotos para casos SOS
    match /sos_photos/{fileName} {
      allow read: if true;  // Lectura pública para que se vean en la comunidad
      allow write: if request.auth != null
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
    
    // ============================================
    // REGLA POR DEFECTO
    // ============================================
    // Denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
