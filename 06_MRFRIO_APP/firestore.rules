rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // USUARIOS
    // ============================================
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
      
      // Subcollection: Training progress
      match /training/{capsuleId} {
        allow read, write: if request.auth != null 
          && request.auth.uid == userId;
      }
    }
    
    // ============================================
    // CLIENTES - solo el técnico dueño
    // ============================================
    match /clients/{clientId} {
      allow read: if request.auth != null 
        && (resource == null || request.auth.uid == resource.data.technicianId);
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.technicianId;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.technicianId;
    }
    
    // ============================================
    // SERVICIOS - solo el técnico dueño
    // ============================================
    match /services/{serviceId} {
      allow read: if request.auth != null 
        && (resource == null || request.auth.uid == resource.data.technicianId);
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.technicianId;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.technicianId;
    }
    
    // ============================================
    // COTIZACIONES - solo el técnico dueño
    // ============================================
    match /quotes/{quoteId} {
      allow read: if request.auth != null 
        && (resource == null || request.auth.uid == resource.data.technicianId);
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.technicianId;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.technicianId;
    }
    
    // ============================================
    // EQUIPOS - lectura pública para QR, escritura dueño
    // ============================================
    match /equipments/{equipmentId} {
      // LECTURA: pública para vista QR web
      allow read: if true;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.technicianId;
      allow update, delete: if request.auth != null 
        && request.auth.uid == resource.data.technicianId;
    }
    
    // ============================================
    // TOKEN TRANSACTIONS (Ledger) - solo el usuario dueño
    // ============================================
    match /token_transactions/{transactionId} {
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      // No permitir update/delete (immutable ledger)
    }
    
    // ============================================
    // FRAUD LOGS - solo crear, nunca leer/modificar desde cliente
    // ============================================
    match /fraud_logs/{logId} {
      allow create: if request.auth != null;
      // Solo Cloud Functions o Admin SDK pueden leer
    }
    
    // ============================================
    // PAYMENT INTENTS - solo el usuario dueño puede leer
    // ============================================
    match /payment_intents/{intentId} {
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
      // Update solo desde Cloud Functions (webhook Stripe/MP)
    }
    
    // ============================================
    // COMMUNITY THREADS (SOS) - lectura pública, escritura autenticada
    // ============================================
    match /community_threads/{threadId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null 
        && request.auth.uid == resource.data.authorId;
      allow delete: if false;
      
      // Subcollection: Respuestas
      match /replies/{replyId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null 
          && request.auth.uid == resource.data.authorId;
      }
    }
    
    // ============================================
    // ORDERS (Compras en tienda) - solo el usuario dueño
    // ============================================
    match /orders/{orderId} {
      allow read: if request.auth != null 
        && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null 
        && request.auth.uid == request.resource.data.userId;
    }
  }
}
